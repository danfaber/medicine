(function(){

    angular.module("medicine").factory("pickListConfiguration", ["pickListEntity", pickListConfiguration]);

    function pickListConfiguration(pickListEntity){

        var defaultPickLists = [
            addPickList(1,'Symptoms',[
                withTab(1, 'Heart', ['Upper Heart','Middle Heart', 'Lower Heart','Related Cardiac']),
                withTab(2, 'Lung', ['Left Lung', 'Right Lung', 'Top Lung'])]),

            addPickList(2, 'Location', [
                withTab(3, 'All', ['London', 'Manchester', 'Liverpool', 'Loughborough'])
            ])
        ];


        function addPickList(id, name, tabs)
        {
            return new pickListEntity.PickList(id, name, tabs);
        }


        function withTab(id, name, values)
        {
            var tabValues = _(values).map(function(value) {return new pickListEntity.TabValue(value, 0); });
            return new pickListEntity.Tab(id, name, tabValues);
        }


        return {
            defaultPickLists: defaultPickLists
        };
    }
})();